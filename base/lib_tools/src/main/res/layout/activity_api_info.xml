<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff8f8fa"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <TextView
                android:id="@+id/request"
                android:onClick="doRequest"
                android:layout_weight="1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:text="@string/request"
                android:textColor="@android:color/white"
                android:background="@color/ff007aff" />

            <TextView
                android:id="@+id/response"
                android:layout_weight="1"
                android:onClick="doResponse"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_18"
                android:gravity="center"
                android:text="@string/response"
                android:textColor="@android:color/white"
                android:background="@color/ffa8afc3" />
        </LinearLayout>

        <TextView
            android:id="@+id/requestContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_16"
            android:textSize="@dimen/sp_14"
            android:lineSpacingExtra="@dimen/dp_3"
            tools:text="@string/test" />
        <TextView
            android:visibility="gone"
            android:id="@+id/responseContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_16"
            android:textSize="@dimen/sp_14"
            android:lineSpacingExtra="@dimen/dp_3"
            tools:text="@string/test" />
    </LinearLayout>
</ScrollView>

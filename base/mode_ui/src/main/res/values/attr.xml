<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="UiTableLayoutView">
        <attr name="frameLineColor" format="color"/>
        <attr name="frameLineWidth" format="integer"/>
    </declare-styleable>

    <declare-styleable name="suitlines">
        <attr name="xySize" format="float" />
        <attr name="xyColor" format="reference|color" />
        <attr name="lineType">
            <enum name="curve" value="0" />
            <enum name="segment" value="1" />
        </attr>
        <attr name="lineStyle">
            <enum name="solid" value="0" />
            <enum name="dashed" value="1" />
        </attr>
        <attr name="needEdgeEffect" format="boolean" />
        <attr name="colorEdgeEffect" format="reference|color" />
        <attr name="needClickHint" format="boolean" />
        <attr name="colorHint" format="reference|color" />
        <attr name="maxOfVisible" format="integer" />
        <attr name="countOfY" format="integer" />
    </declare-styleable>

    <declare-styleable name="MarqueeTextView">
        <!--垂直切换时间-->
        <attr name="vertical_switch_speed" format="integer" />
        <!--垂直切换间隔-->
        <attr name="vertical_switch_interval" format="integer" />
        <!--水平滚动时间-->
        <attr name="horizontal_scroll_speed" format="integer" />
        <!--内容文字颜色-->
        <attr name="content_text_size" format="dimension" />
        <!--内容文字大小-->
        <attr name="content_text_color" format="color" />

        <attr name="content_single_text" format="string" />

        <!--水平循环速度-->
        <attr name="horizontal_loop_speed" format="integer" />
    </declare-styleable>

    <declare-styleable name="RadiusTextView">
        <attr name="rtvRadius" format="dimension"/>
        <attr name="rtvStrokeWidth" format="dimension"/>
        <attr name="rtvStrokeColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_corner_radius_top_left" format="dimension" />
        <attr name="riv_corner_radius_top_right" format="dimension" />
        <attr name="riv_corner_radius_bottom_left" format="dimension" />
        <attr name="riv_corner_radius_bottom_right" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="BgContainer">
        <attr name="cbRadius" format="dimension" />
        <attr name="cbStrokeWidth" format="dimension" />
        <attr name="cbStrokeColor" format="color" />
        <attr name="cbBgColor" format="color" />
    </declare-styleable>

    <declare-styleable name="BadgeView">
        <attr format="color" name="badgeBackgroundColor"/>
        <attr format="color" name="badgeTextColor"/>
        <attr format="string" name="badgeText"/>
        <attr format="dimension" name="badgeTextSize"/>
        <attr format="dimension" name="badgePadding"/>
        <attr format="dimension" name="pointRadius"/>
        <attr format="enum" name="cBadgeStyle">
            <enum name="circle" value="1"/>
            <enum name="point" value="2"/>
        </attr>
    </declare-styleable>
</resources>
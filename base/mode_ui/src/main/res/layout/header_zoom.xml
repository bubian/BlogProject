<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimary"
        xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            android:id="@+id/zoom_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/zoom_bg"
            android:foreground="@mipmap/mongolian_layer"
            android:scaleType="centerCrop" />

    <ImageView
            android:id="@+id/zoom_mongolian"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/main_mongolian"
            android:scaleType="centerCrop"/>

    <com.pds.ui.view.refresh.IOSLoadingView
            android:id="@+id/zoom_ios_loading"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:background="#00000000"
            android:visibility="invisible"/>

    <TextView
            android:id="@+id/zoom_state"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:textColor="#454545"
            android:textSize="12sp"
            tools:text="松开刷新" />

</merge>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="27dp"
    android:paddingStart="27dp">

    <com.pds.ui.view.et.ClearEditText
        android:id="@+id/account_editview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/et_bg_selector"
        android:digits="0123456789"
        android:drawableEnd="@mipmap/icon_close_round"
        android:gravity="bottom"
        android:hint="@string/input_mobile_hint"
        android:imeOptions="actionNext"
        android:inputType="phone"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingBottom="15dp"
        android:layout_marginBottom="13dp"
        android:paddingTop="15dp"
        android:textColor="@drawable/et_color_selector"
        android:textColorHint="@color/ffa8afc3"
        android:textCursorDrawable="@drawable/et_input_cursor"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/password_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom">

        <com.pds.ui.view.et.SafeEditText
            android:id="@+id/password_editview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/et_bg_selector"
            android:gravity="center_vertical"
            android:hint="@string/input_sms_code_hint"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:maxLines="1"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textColor="@drawable/et_color_selector"
            android:textColorHint="@color/ffa8afc3"
            android:textCursorDrawable="@drawable/et_input_cursor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/password_assist_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingBottom="15dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="15dp"
            android:text="@string/get_verify_code"
            android:textColor="#ff0a6aff"
            android:textSize="16sp" />
    </RelativeLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_gravity="center_horizontal"
        android:text="登录"
        app:backgroundTint="#ff007eff"
        app:rippleColor="#ff095BAE"
        style="@style/MaterialButton.UnelevatedButton"
        android:elevation="0dp"
        app:cornerRadius="22.5dp" />

</LinearLayout>
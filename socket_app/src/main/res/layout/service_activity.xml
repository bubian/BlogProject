<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.ClientActivity"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数据打印"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="连接状态:"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="60dp"/>

        <TextView
            android:id="@+id/socket_connect_state"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="未连接"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_light"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/service_data"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:background="@drawable/bg_client_data"
        android:layout_weight="2"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="socket信息"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/socket_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        android:layout_weight="1"
        android:background="@drawable/bg_client_data"/>


    <Button
        android:id="@+id/start_accept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启socket监听"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_blue_light"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

</LinearLayout>
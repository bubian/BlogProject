<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="UiTableLayoutView">
        <attr name="frameLineColor" format="color"/>
        <attr name="frameLineWidth" format="integer"/>
    </declare-styleable>

    <declare-styleable name="suitlines">
        <attr name="xySize" format="float" />
        <attr name="xyColor" format="reference|color" />
        <attr name="lineType">
            <enum name="curve" value="0" />
            <enum name="segment" value="1" />
        </attr>
        <attr name="lineStyle">
            <enum name="solid" value="0" />
            <enum name="dashed" value="1" />
        </attr>
        <attr name="needEdgeEffect" format="boolean" />
        <attr name="colorEdgeEffect" format="reference|color" />
        <attr name="needClickHint" format="boolean" />
        <attr name="colorHint" format="reference|color" />
        <attr name="maxOfVisible" format="integer" />
        <attr name="countOfY" format="integer" />
    </declare-styleable>

    <declare-styleable name="MarqueeTextView">
        <!--垂直切换时间-->
        <attr name="vertical_switch_speed" format="integer" />
        <!--垂直切换间隔-->
        <attr name="vertical_switch_interval" format="integer" />
        <!--水平滚动时间-->
        <attr name="horizontal_scroll_speed" format="integer" />
        <!--内容文字颜色-->
        <attr name="content_text_size" format="dimension" />
        <!--内容文字大小-->
        <attr name="content_text_color" format="color" />

        <attr name="content_single_text" format="string" />

        <!--水平循环速度-->
        <attr name="horizontal_loop_speed" format="integer" />
    </declare-styleable>
</resources>
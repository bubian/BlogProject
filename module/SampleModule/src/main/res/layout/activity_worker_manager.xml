<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/simple_task"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="简单任务"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/process_task"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="进度任务"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/link_task"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="工作链任务"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/repeat_task"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="重复任务"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/unique_task"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="唯一任务"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/constraints_task"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="约束任务"
            android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/job_service"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="JobService任务"
            android:gravity="center"
            android:layout_marginEnd="8dp"/>

        <Button
            android:id="@+id/network_task"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="CMNetwork任务"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/constraints1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/cb_network_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网络类型"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"/>
        <CheckBox
            android:id="@+id/cb_charging"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充电中"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"/>

        <CheckBox
            android:id="@+id/cb_device_idle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备空闲"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"/>

        <CheckBox
            android:id="@+id/cb_battery_not_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="非低电量"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/constraints2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <CheckBox
            android:id="@+id/cb_Storage_not_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="非低存储"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"/>

        <CheckBox
            android:id="@+id/cb_content_update_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容更新延迟"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"/>
        <CheckBox
            android:id="@+id/cb_max_content_update_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最大内容更新延迟"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"/>

    </LinearLayout>



    <TextView
        android:id="@+id/work_output"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="15sp"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"/>

</LinearLayout>


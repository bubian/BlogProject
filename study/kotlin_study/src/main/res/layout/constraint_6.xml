<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:ignore="MissingConstraints"
    android:fitsSystemWindows="true"
    tools:context=".ui.constraint.ConstraintLayoutActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="88dp"
            app:title="title"
            app:collapsedTitleTextAppearance="@style/collapse"
            app:expandedTitleTextAppearance="@style/expendText"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- parallax:视图将以视差方式滚动，参见layout_collapseParallaxMultiplier属性以更改乘数-->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/kkkk"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.1"/>

            <!-- pin:视图将固定在适当的位置-->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:gravity="bottom"
                app:titleMarginStart="1dp"
                app:layout_collapseMode="pin"
                app:title="CoordinatorLayout" >

                <androidx.appcompat.widget.ActionMenuView
                    android:id="@+id/actionMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:theme="@style/Toolbar.TechStar"
                    app:showDividers="middle"
                    android:layout_gravity="end"
                    android:gravity="center_vertical">
                </androidx.appcompat.widget.ActionMenuView>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/constraint_common"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
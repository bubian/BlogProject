<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_16">

    <TextView
        android:id="@+id/one"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_100"
        android:background="@color/color_f684033"
        android:text="elevation=18dp"
        android:gravity="center"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/white"
        android:elevation="@dimen/dp_18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/two"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_100"
        android:background="@color/color_f684033"
        android:text="translationZ=18dp"
        android:gravity="center"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/white"
        android:translationZ="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/one"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_100"
        android:background="@color/color_f684033"
        android:text="translationZ=18dp and elevation=18dp"
        android:gravity="center"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/white"
        android:elevation="@dimen/dp_18"
        android:translationZ="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_16"
        app:layout_constraintLeft_toRightOf="@+id/two"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/shadow_one"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_100"
        android:background="@color/color_f684033"
        android:text="elevation=18dp"
        android:gravity="center"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_32"
        app:layout_constraintTop_toBottomOf="@+id/one"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>